<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ToggleButton
        android:id="@+id/tglBtn_Average"
        style="@style/toggleButton_Mood_Average"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_toggle_mood_average_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/tglBtn_Unhappy"
        style="@style/toggleButton_Mood_Unhappy"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_toggle_mood_unhappy_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tglBtn_Average"
        app:layout_constraintStart_toEndOf="@+id/tglBtn_Sad"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/tglBtn_Sad"
        style="@style/toggleButton_Mood_Sad"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_toggle_mood_sad_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/tglBtn_Happy"
        style="@style/toggleButton_Mood_Happy"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_toggle_mood_happy_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tglBtn_Excellent"
        app:layout_constraintStart_toEndOf="@+id/tglBtn_Average"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/tglBtn_Excellent"
        style="@style/toggleButton_Mood_Excellent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_toggle_mood_excellent_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>